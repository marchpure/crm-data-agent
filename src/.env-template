# Agent Configuration
AGENT_NAME="crm_data_agent" # Agent Name. [REQUIRED]

# Volcengine General Credentials (for TOS, EMR, etc.)
VOLCENGINE_AK=""                # Volcengine Access Key. [REQUIRED]
VOLCENGINE_SK=""                # Volcengine Secret Key. [REQUIRED]
VOLCENGINE_REGION="cn-beijing"    # Volcengine Region. [REQUIRED]

# Volcengine Ark LLM Configuration
ARK_API_KEY=""                  # Volcengine Ark API Key (can be different from general AK). [REQUIRED]
ARK_BASE_URL="https://ark.cn-beijing.volces.com/api/v3" # Volcengine Ark Base URL. [OPTIONAL]
VE_LLM_MODEL_ID=""              # Volcengine LLM Model ID (Endpoint ID). [REQUIRED]

# EMR Serverless Presto Configuration
EMR_CATALOG="hive_catalog"      # EMR Serverless Catalog. [REQUIRED]
EMR_DATABASE="test_db"          # EMR Serverless Database. [REQUIRED]

# Data Deployment Script Configuration
VE_TOS_BUCKET=""                # TOS bucket for sample data. [REQUIRED FOR DEPLOYMENT SCRIPT]

VE_TOS_PREFIX="sample-data"       # TOS path prefix for sample data. [OPTIONAL]
VE_PARQUET_FOLDER="./sample-data" # Local folder containing Parquet files. [OPTIONAL]
VE_DEPLOY_SKIP_UPLOAD="false"     # Skip uploading Parquet files to TOS. [OPTIONAL]
VE_DEPLOY_SKIP_CREATE_TABLES="false" # Skip creating tables in EMR Presto. [OPTIONAL]
VE_DEPLOY_SKIP_QUERY="false"        # Skip running validation queries. [OPTIONAL]

# Volcengine Services Configuration (Currently using in-memory implementations)
# VE_TOS_BUCKET=""                # TOS bucket for Artifacts Service.
# VE_SESSION_DATABASE=""          # Database name for storing session data.

# Metadata Configuration
SFDC_METADATA_FILE="sfdc_metadata.json" # Salesforce Metadata file path. Do not change it if not using custom metadata.
